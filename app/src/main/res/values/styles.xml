<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyStyleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?myColor</item>
    </style>

    <style name="MyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/turquoise_600</item>
        <item name="helperTextEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="errorTextColor">#034AFF</item>
    </style>

    <style name="MyRadio_BTN" parent="Widget.MaterialComponents.CompoundButton.RadioButton" >
        <item name="android:textSize">@dimen/size_text_rb_themes</item>
        <item name="android:fontFamily">@font/font3</item>
    </style>

    <style name="MySwitchBTN" parent="Widget.MaterialComponents.CompoundButton.Switch" >
        <item name="android:textSize">@dimen/size_text_rb_themes</item>
        <item name="android:fontFamily">@font/font3</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/chewy</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="MyMediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">90%</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>