<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:innerRadiusRatio="3.3"
        android:shape="ring"
        android:thicknessRatio="8.333"
        android:useLevel="false">
        <size
            android:height="25dip"
            android:width="25dip" />

        <gradient
            android:centerColor="@color/turquoise_800"
            android:centerY="0.50"
            android:endColor="@color/turquoise_400"
            android:startColor="#000105"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>